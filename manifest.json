{
	"name": "グーグル画像DL",
	"manifest_version": 3,
	"version": "1.0",
	"permissions": ["activeTab", "scripting", "downloads"],
	"action": {
		"default_popup": "popup.html"
	},
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://www.google.com/search?*sclient=img*",
                "https://www.google.com/search?*tbm=isch*"
            ],
            "all_frames": true,
            "js": ["/js/content.js",
                    "/js/jquery-3.7.1.min.js"]
        }
    ]
}